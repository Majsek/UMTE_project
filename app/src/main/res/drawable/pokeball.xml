<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Horní červená polovina s gradientem -->
    <path android:pathData="M54,4 A50,50 0 0,1 104,54 H4 A50,50 0 0,1 54,4 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="54"
                android:startY="4"
                android:endX="54"
                android:endY="54">
                <item android:offset="0.0" android:color="#FF5555"/> <!-- Světlejší červená nahoře -->
                <item android:offset="1.0" android:color="#FF0000"/> <!-- Tmavší červená dole -->
            </gradient>
        </aapt:attr>
    </path>



    <!-- Spodní část s lehce načervenalým gradientem -->
    <path android:pathData="M54,104 A50,50 0 0,1 4,54 H104 A50,50 0 0,1 54,104 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="54"
                android:startY="54"
                android:endX="54"
                android:endY="104">
                <item android:offset="0.0" android:color="#FFFFFF"/> <!-- Čistě bílá nahoře -->
                <item android:offset="1.0" android:color="#FF8C8C"/> <!-- Lehce načervenalá dole -->
            </gradient>
        </aapt:attr>
    </path>

    <!-- Středový kruh (bílý okraj) -->
    <path
        android:fillColor="#0D0D0D"
        android:pathData="M54,42 A12,12 0 1,1 54,66 A12,12 0 1,1 54,42 Z" />

    <!-- Středový kruh (černý vnitřek) -->
    <path
        android:fillColor="#32FFFFFF"
        android:pathData="M54,46 A8,8 0 1,1 54,62 A8,8 0 1,1 54,46 Z" />

    <!-- Středový kruh (bílý bod uprostřed) -->
    <path
        android:fillColor="#FFFFFF"
        android:pathData="M54,50 A4,4 0 1,1 54,58 A4,4 0 1,1 54,50 Z" />
</vector>
